@model KitchenModel

@{
    ViewData["Title"] = "Kitchen";
}

<h1>Kitchen</h1>

<div class="row">
    <div class="col-md-5">
        <input type="date" id="date" name="date" value="@Model.Date" />
    </div>
    <br />
    <br />
    <div class="col-md-6">
        <button class="button1" onClick="Update()">&emsp;&emsp;Refresh Page&emsp;&emsp;</button>
        <script type="text/javascript">
            function Update() {
                var date = document.getElementById("date").value;
                var url = date;
                window.location.href = url;
            }
        </script>
    </div>
    <br />
    <br />
</div>

<table class="table table-dark">
    <thead>
        <tr>    
            <th>
                @Html.DisplayNameFor(model => model.TotalAdultsDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalKidsDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedInAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedInKids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingKids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.TotalAdultsDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.TotalKidsDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.CheckedInAdults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.CheckedInKids)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.RemainingAdults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.RemainingKids)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.RemainingTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Date)
                </td>
            </tr>
    </tbody>
</table>
